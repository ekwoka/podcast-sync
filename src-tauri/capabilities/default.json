{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "fs:default",
    {
      "identifier": "fs:allow-exists",
      "allow": [{ "path": "$APPDATA/*" }, { "path": "$APPLOCALDATA/*" }]
    },
    {
      "identifier": "fs:allow-app-write",
      "allow": [{ "path": "$APPDATA/.config.json" }, { "path": "$APPLOCALDATA/config.json" }]
    },
    "core:default",
    "shell:allow-open"
  ]
}
